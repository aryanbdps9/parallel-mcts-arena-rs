{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug play (MSVC / cppvsdbg)",
            "type": "cppvsdbg",
            "request": "launch",
            "preLaunchTask": "debug prep (play)",
            "program": "${workspaceFolder}\\target\\debug\\play.exe",
            "args": ["--gui"],
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "RUST_BACKTRACE",
                    "value": "1"
                }
            ],
            "console": "integratedTerminal"
        }
    ]
}